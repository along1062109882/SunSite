                        {{/img_url}}
                        <div class="grand-detail">
                          <div class="grand_p">
                            <div class='title'>{{name}}</div>
                            <div class='content'>{{{content}}}</div>
                          </div>
                          <span class='special_page'>
                            <b >進入專業</b>
                          </span>
                        </div>
                      </a>
