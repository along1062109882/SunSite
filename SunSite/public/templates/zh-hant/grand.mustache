    {{> header }}

    <!-- new -->
    <!-- banner -->
    <div class="common-banner grand_logo">
      <div class="common-banner-content">
        <img src="/static/imgs/sun-logo.svg" alt="sun-logo" class="sun-logo" />
        <h1 class="banner-title">精彩盛事</h1>
      </div>
    </div>
    <!-- news -->
    <div class="news-wrapper diamond-bg">
        <div class='grand_section'>
            <nav class='grand_nav'>
                <ol>
                    <li class='grand_active'>澳門格蘭披治大賽車 </li>
                    <li>太陽城集團十週年</li>
                    <li>張學友世界巡迴演唱會</li>
                </ol>
                <p></P>
            </nav>
            <div  class="swiper-container">
                <div class="swiper-wrapper">
                <!-- 下面是4个不同颜色的轮播滑块 -->
                <div class="swiper-slide" ><span class='swiper_active' id='slide_car'>澳门格兰披治大赛车</span></div>
                <div class="swiper-slide" ><span id='slide_ten'>太陽城集團十週年</span></div>
                <div class="swiper-slide"><span id='slide_music'>张学友世界巡回演唱</span></div>
                </div>
                <div class="swiper-button-prev"><img src="/static/imgs/left_btn.png" /></div><!--左箭头-->
                <div class="swiper-button-next"><img src="/static/imgs/right_btn.png" /></div><!--右箭头-->
            </div>
            <div class='grand_container grand_car'>
                <ul>
                {{#Grand}}
                     <li class="grand-item">
                      <a href="{{url}}" target='_blank' class="grand-box">
                        {{#img_url}}
                          <span class="grand-banner"><img src="{{img_url}}" alt="{{alt}}" /></span>
                        {{/img_url}}
                        <div class="grand-detail">
                          <div class="grand_p">
                            <div class='title'>{{name}}</div>
                            <div class='content'>{{{content}}}</div>
                          </div>
                          <span class='special_page'>
                            <b>進入專業</b>
                          </span>
                        </div>
                      </a>
                    </li>
                {{/Grand}}
                </ul>
            </div>
            <div class='grand_container grand_ten'>
                <ul>
                {{#Annual}}
                    <li class="grand-item">
                      <a href="{{url}}" target='_blank' class="grand-box">
                        {{#img_url}}
