<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="description" content="{{Post.description}}" />
    <meta name="keywords" content="{{Post.keywords}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{{Post.title}}" />
    <meta name="twitter:description" content="{{Post.description}}" />
    <meta name="twitter:image" content="{{Post.square_link.url}}" />
    <meta property="og:locale" content="{{LanguageDisplay}}" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{Post.title}}" />
    <meta property="og:description" content="{{Post.description}}" />
    <meta property="og:image" content="{{Post.square_link.url}}" />
    <meta http-equiv="Content-Type" content="text/html"; charset="uft-8">
    <meta http-equiv="Content-Language" content="zh-HK">
    <title>{{Post.title}} - {{CurrentRootCategory.name}} - 太陽城集團 SUNCITYGROUP</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/static/css/base.css" />
    <link rel="stylesheet" href="/static/css/index.css" />
    <link rel="stylesheet" href="/static/css/aboutus.css" />
    <link rel="stylesheet" href="/static/css/animate.css" />
    <link rel="stylesheet" href="/static/css/latest.css" />
    <link rel="stylesheet" href="/static/css/boxer.min.css" />
    <link rel="stylesheet" href="/static/css/footer.css" />
    <link rel="stylesheet" href="/static/css/header.css" />
    <!-- Google Tag Manager -->
    <script>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});
        var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';
        j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-5MH9NFH');
    </script>
    <!-- End Google Tag Manager -->
  </head>
  <body>
  <!-- Google Tag Manager (noscript) -->
      <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5MH9NFH" height="0" width="0" style="display:none;visibility:hidden"></iframe>
      </noscript>
    <!-- End Google Tag Manager (noscript) -->
    {{> header }}
    <!-- company contribution -->
    <div class="childcompany">
      <div class="content-container">
        <div class="event-detail">
          <h2 class="event-detail-title">
            <a href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}"><span>{{CurrentRootCategory.name}}</span></a>
            <img src="/static/imgs/more-button.svg" alt="suncity-more"/>
            <a href="/{{LanguageDisplay}}/news?year={{Year}}"><span>{{Year}}</span></a>
          </h2>
          <!-- article -->
          <article>
            {{#Post}}
            <div class="article-photos">
              <h1>{{title}}</h1>
              <div class="photo-viewpager">
                <div class="photo-wrapper">
                  <ul>
                    {{#Links}}
                    <li><div class="ratio-16-9"><img src="{{url}}" title="{{description}}" alt="{{name}}"></div></li>
                    {{/Links}}
                  </ul>
                </div>
                <div class="thumbnails-viewpager">
                  <div class="prev-btn"><img src="/static/imgs/more-button-prev.svg"></div>
                  <div class="viewpager">
                    <ul>
                      {{#Links}}
                      <li><img src="{{url}}" title="{{description}}" alt="{{name}}" width="80" height="80"></li>
                      {{/Links}}
                    </ul>
                  </div>
                  <div class="next-btn"><img src="/static/imgs/more-button-next.svg"></div>
                  <div class="clear"></div>
                </div>
              </div>
            </div>
            <div class="article-photos-font">{{{content}}}</div>
            <div class="event-bottom-bar">
              <span>{{date}}</span>
              <div class="go-page-icon-group">
                <img id="share_fb" src="/static/imgs/fb-share.svg">
                <img id="share_wx" src="/static/imgs/wechat-share.svg"><span id="share_wx_qr_frame"><span id="share_wx_qr"></span></span>
                <img id="share_wb" src="/static/imgs/weibo-share.svg">
              </div>
              <div class=go-page-btn-group>
                <a class="go-page go-page-next {{^NextPost}}go-page-hidden{{/NextPost}}"
                   href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category/{{NextPost.slug}}">下一篇</a>
                <a class="go-page {{^PreviousPost}}go-page-hidden{{/PreviousPost}}"
                   href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category/{{PreviousPost.slug}}">上一篇</a>
              </div>
            </div>
          </div>
          {{/Post}}
        </article>
        <aside class="event-list">
          <!-- relative news -->
          <!-- <span>相關動態</span> -->
          <h3 class="event-list-title">
            <a href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category">
              相關動態
              <i class="icon-more-button"></i>
            </a>
          </h3>
          <div class="gradient-border"></div>
          {{! this part temporary to be static, no data relative }}
          <ul class="event-list-box">
            {{#RelatedPostPreviews}}
            <li class="event-list-item">
              <a href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category/{{slug}}">
                <div class="event-list-img-box">
                  {{#square_link}}
                    <img src="{{url}}" title="{{description}}" alt="{{name}}" srcset="{{url}} 2x, {{url}} 3x">
                  {{/square_link}}
                  {{^square_link}}
                    <img src="/static/imgs/group.svg" title="{{description}}" alt="{{name}}" srcset="/static/imgs/latest-news-1@2x.jpg 2x, /static/imgs/latest-news-1@3x.jpg 3x">
                  {{/square_link}}
                </div>
                <div class="event-list-detail-box">
                  <p>{{title}}</p>
                </div>
              </a>
            </li>
            {{/RelatedPostPreviews}}
          </ul>

          <!-- latest news -->
          <!-- <span>最新動態</span> -->
          <h3 class="event-list-title latest-news-list"><a href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category/all">最新動態<i class="icon-more-button"></i></a></h3>
          <div class="gradient-border"></div>
          <ul class="event-list-box">
            {{#LatestPostPreviews}}
            <li class="event-list-item">
              <a href="/{{LanguageDisplay}}/{{CurrentRootCategory.slug}}/category/{{slug}}">
                <div class="event-list-img-box">
                  {{#SquareLink}}
                    <img src="{{url}}" title="{{description}}" alt="{{name}}" srcset="{{url}} 2x, {{url}} 3x">
                  {{/SquareLink}}
                  {{^SquareLink}}
                    <img src="/static/imgs/group.svg" title="{{description}}" alt="{{name}}" srcset="/static/imgs/latest-news-1@2x.jpg 2x, /static/imgs/latest-news-1@3x.jpg 3x">
                  {{/SquareLink}}
                </div>
                <div class="event-list-detail-box">
                  <p>{{title}}</p>
                </div>
              </a>
            </li>
            {{/LatestPostPreviews}}
          </ul>

        </aside>
        <div class="clear"></div>
      </div>
      <div class="diamond diamond-left"></div>
      <div class="diamond diamond-right"></div>
      <div class="diamond-background"></div>
    </div>
    {{> footer}}
    <div class="element_to_pop_up">
      <div class="bigpic-header-wrapper">
        <span class="btn-close">
          <img src="/static/imgs/bigpic-close.svg" />
        </span>
      </div>
      <img src=""/>
    </div>
    <script src="/static/js/vender/jquery-1.8.3.min.js"></script>
    <script src="/static/js/vender/wow.min.js"></script>
    <script src="/static/js/vender/bpopup.min.js"></script>
    <script src="/static/js/latest.js"></script>
    <script src="/static/js/vender/jquery.qrcode.min.js"></script>
    <script src="/static/js/footer.js"></script>
    <script src="/static/js/header.js"></script>
    <script src="/static/js/vender/utility.js"></script>
    <script src="/static/js/hreflang.js"></script>
  </body>
</html>
